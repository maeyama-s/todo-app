<div class="devise-container-login">
  <h2>ログイン</h2>
  <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
  <div class="back-sign-up">
    <%= link_to "新規登録はこちら", new_user_registration_path %>
  </div>
  <div class="back-top">
    <%= link_to "TOPページへ戻る", root_path %>
  </div>
</div>

<%= render "shared/footer" %>